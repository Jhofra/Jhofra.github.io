<body>
  <header>
    <h1>Camarón Que Se Duerme</h1>
  </header>
  
  <div class="container">
    <!-- Formulario para agregar libros/mangas/novelas ligeras -->
    <form class="add-item-form" id="addItemForm">
      <h2>Agregar nuevo</h2>
      <label for="itemImage">Portada (Imagen)</label>
      <input type="file" id="itemImage" accept="image/*" required>
      
      <label for="itemTitle">Título</label>
      <input type="text" id="itemTitle" placeholder="Ej. Boruto: Two Blue Vortex" required>
      
      <label for="itemLink">Enlace (URL o archivo)</label>
      <input type="text" id="itemLink" placeholder="Ej. https://miarchivo.pdf o https://algunsitio.com" required>
      
      <label for="itemCategory">Categoría</label>
      <select id="itemCategory" required>
        <option value="">-- Selecciona --</option>
        <option value="libros">Libros</option>
        <option value="mangas">Mangas</option>
        <option value="novelas">Novelas Ligeras</option>
      </select>
      
      <button type="submit">Agregar</button>
    </form>
    
    <!-- Sección de Libros -->
    <div class="items-section">
      <h2>Libros</h2>
      <div class="items-grid" id="librosGrid">
        <!-- Aquí se agregan dinámicamente los libros -->
      </div>
    </div>
    
    <!-- Sección de Mangas -->
    <div class="items-section">
      <h2>Mangas</h2>
      <div class="items-grid" id="mangasGrid">
        <!-- Aquí se agregan dinámicamente los mangas -->
      </div>
    </div>
    
    <!-- Sección de Novelas Ligeras -->
    <div class="items-section">
      <h2>Novelas Ligeras</h2>
      <div class="items-grid" id="novelasGrid">
        <!-- Aquí se agregan dinámicamente las novelas ligeras -->
      </div>
    </div>
  </div>
  
  <script>
    // Referencias a elementos del DOM
    const addItemForm = document.getElementById('addItemForm');
    const itemImageInput = document.getElementById('itemImage');
    const itemTitleInput = document.getElementById('itemTitle');
    const itemLinkInput = document.getElementById('itemLink');
    const itemCategorySelect = document.getElementById('itemCategory');
    
    const librosGrid = document.getElementById('librosGrid');
    const mangasGrid = document.getElementById('mangasGrid');
    const novelasGrid = document.getElementById('novelasGrid');
    
    // Al enviar el formulario, agregamos un nuevo "item" (libro/manga/novela ligera)
    addItemForm.addEventListener('submit', function(event) {
      event.preventDefault(); // Evita el recargo de la página
      
      // 1. Obtener datos del formulario
      const file = itemImageInput.files[0];
      const title = itemTitleInput.value.trim();
      const link = itemLinkInput.value.trim();
      const category = itemCategorySelect.value;
      
      // Validación simple
      if (!file || !title || !link || !category) {
        alert('Por favor, completa todos los campos.');
        return;
      }
      
      // 2. Convertir la imagen a Data URL
      const reader = new FileReader();
      reader.onload = function(e) {
        const imageDataUrl = e.target.result;
        
        // 3. Crear la tarjeta y agregarla al contenedor correspondiente
        const card = document.createElement('div');
        card.classList.add('item-card');
        
        // Usamos un <a> que envuelva la imagen y el título para que
        // al hacer click en cualquiera de los dos, vaya al enlace
        card.innerHTML = `
          <a href="${link}" target="_blank">
            <img src="${imageDataUrl}" alt="${title}">
            <p class="item-title">${title}</p>
          </a>
        `;
        
        // 4. Insertar la tarjeta en la categoría elegida
        switch (category) {
          case 'libros':
            librosGrid.appendChild(card);
            break;
          case 'mangas':
            mangasGrid.appendChild(card);
            break;
          case 'novelas':
            novelasGrid.appendChild(card);
            break;
        }
        
        // 5. Limpiar formulario
        addItemForm.reset();
      };
      
      // Leer la imagen como Data URL
      reader.readAsDataURL(file);
    });
  </script>
</body>
</html>
